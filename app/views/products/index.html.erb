<div class="container" id="products">
  <h2>Products</h2>

<div class="row">
  <div class="col-md-6">
    <% @products[0, 25].each do |product| %>
    <h3>Product Name: <%= product.name%> - $<%=product.cost%> (Made in <%=product.country%>)</h3>
    <% end %>
  </div>
  <div class="col-md-6">
    <% @products[26, 50].each do |product| %>
    <h3>Product Name: <%= product.name%> - $<%=product.cost%> (Made in <%=product.country%>)</h3>
    <% end %>
  </div>
</div>
  <p><%= link_to "Add a New Product", new_product_path(@product) %></p>
</div>
